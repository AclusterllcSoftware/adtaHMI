    function load_hour_minute_dropdowns() {
        let hours_html, minutes_html;
        for (var i = 0; i < 24; i++) {
            let v = i;
            if (i < 10) {
                v = "0" + i;
            }
            hours_html += '<option value="' + v + '">' + v + '</option>';
